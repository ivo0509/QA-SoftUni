@{
    ViewData["Title"] = "Create Entity page";
}

@model EntityViewModel

<div class="container d-flex justify-content-center  align-items-center">

    <form style="width: 26rem;" class="border-5" method="post" asp-action="Create" asp-controller="Entities">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="text-align: center"></div>
        <div class="form-outline mb-4">
            <input type="text" id="name" class="form-control" placeholder="Name" asp-for="Name"/>
            <div style="text-align:center">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-outline mb-4">
            <textarea class="form-control" id="description" rows="4" placeholder="Description..." asp-for="Description"></textarea>
            <div style="text-align:center">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-outline mb-4">
            <input type="text" id="author" class="form-control" placeholder="Author" asp-for="Author" />
            <div style="text-align:center">
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-outline mb-4">
            <input type="number" id="count" class="form-control" placeholder="Count" asp-for="Count" />
            <div style="text-align:center">
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="form-outline mb-4">
            <select class="form-select" aria-label="Default select example" asp-for="Status" id="status">
                <option selected>Open this select menu</option>
                <option value="10">One</option>
                <option value="20">Two</option>
                <option value="30">Three</option>
                <option value="40">Four</option>
            </select>
        </div>
        <!-- Submit button -->
        <div class="row">
            <button type="sumbit" class="btn btn-primary" id="createBtn">Create</button>
            <a type="button" class="btn btn-danger" asp-controller="Home" asp-action="Index" id="cancelBtn">Cancel</a>
        </div>

    </form>
</div>
